<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="update-tasks-table" author="ElovskikhMM">

        <addColumn tableName="tasks">

            <column name="url" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="file_path" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="status" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="grade" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="result" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="internship_info_id" type="BIGINT">
                <constraints foreignKeyName="internship_info_id"
                             referencedTableName="interships_info"
                             referencedColumnNames="id"/>
            </column>

        </addColumn>

    </changeSet>

</databaseChangeLog>