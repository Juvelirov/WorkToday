<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="add-internship-in-profile" author="ElovskikhMM">

    <addColumn tableName="interships_info">
        <column name="user_info_id" type="BIGINT" autoIncrement="true">
            <constraints nullable="false"/>
        </column>
    </addColumn>

        <addForeignKeyConstraint
                baseTableName="interships_info"
                baseColumnNames="user_info_id"
                referencedTableName="users_info"
                referencedColumnNames="id"
                constraintName="fk_interships_info_users_info"/>

    </changeSet>
</databaseChangeLog>