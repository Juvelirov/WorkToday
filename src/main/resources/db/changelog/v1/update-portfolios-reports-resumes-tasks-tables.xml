<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="update-portfolios-reports-resumes-tasks-tables" author="ElovskikhMM">

        <addColumn tableName="portfolios">
            <column name="user_info_id" type="BIGINT">
                <constraints foreignKeyName="user_info_id"
                             referencedTableName="users_info"
                             referencedColumnNames="id"/>
            </column>
        </addColumn>

        <addColumn tableName="resumes">
            <column name="user_info_id" type="BIGINT">
                <constraints foreignKeyName="user_info_id"
                             referencedTableName="users_info"
                             referencedColumnNames="id"/>
            </column>
        </addColumn>

        <addColumn tableName="reports">
            <column name="user_info_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addColumn tableName="tasks">
            <column name="user_info_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </addColumn>

        <addForeignKeyConstraint
                baseTableName="reports"
                baseColumnNames="user_info_id"
                referencedTableName="users_info"
                referencedColumnNames="id"
                constraintName="fk_reports_users_info"/>

        <addForeignKeyConstraint
                baseTableName="tasks"
                baseColumnNames="user_info_id"
                referencedTableName="users_info"
                referencedColumnNames="id"
                constraintName="fk_reports_users_info"/>

    </changeSet>

</databaseChangeLog>